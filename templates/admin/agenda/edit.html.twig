{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminAgendaController!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-2">Créer un évenement</h1>
        <form method="post" enctype="multipart/form-data">
            {{ form_start(form) }}

            {# Champ titre #}
            <div class="form-group">
                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.title) }}
            </div>

             {# Champ description #}
            <div class="form-group">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.description) }}
            </div>

            {# Champ image #}
            <div class="form-group">
                {{ form_label(form.picture, 'Image', {'label_attr': {'class': 'control-label'}}) }}
                {% if agenda.picture %}
                    <div>
                        <img src="/uploads/pictures/{{ agenda.picture }}" alt="Image de {{ agenda.title }}" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
                    </div>
                {% endif %}
                {{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.picture) }}
            </div>

            {# Champ date #}
            <div class="form-group">
                {{ form_label(form.date, 'Date', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.date) }}
            </div>

            {# Champ durée #}
            <div class="form-group">
                {{ form_label(form.limitNumber, 'Limite de participants', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.limitNumber, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.limitNumber) }}
            </div>

            {# Bouton de soumission #}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Créer</button>
            </div>

            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
