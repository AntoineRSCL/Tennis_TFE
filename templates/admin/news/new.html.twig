{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminNewsController!{% endblock %}

{% block body %}
<div class="adminBox">
    <div class="container-fluid">
        <a href=" {{ path('admin_news_index') }}" class="btn btn-secondary">Retour</a>
        <h1 class="my-2">Créer une nouvelle</h1>
        <form method="post" enctype="multipart/form-data">
            {{ form_start(form) }}

            {# Champ titre #}
            <div class="form-group">
                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.title) }}
            </div>

            {# Champ contenu #}
            <div class="form-group">
                {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.content) }}
            </div>

            {# Champ image #}
            <div class="form-group">
                {{ form_label(form.picture, 'Image', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.picture) }}
            </div>

            {# Champ lien #}
            <div class="form-group">
                {{ form_label(form.link, 'Lien', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.link, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.link) }}
            </div>            

            {# Bouton de soumission #}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Créer la nouvelle</button>
            </div>

            {{ form_end(form) }}
        </form>
    </div>
</div>
{% endblock %}