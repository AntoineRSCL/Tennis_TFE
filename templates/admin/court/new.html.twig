{% extends "admin/base.html.twig" %}

{% block title %}Créer un court de tennis{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        <h1 class="my-2">Créer un terrain</h1>
        <form method="post">
            {{ form_start(form) }}

            {# Champ nom #}
            <div class="form-group">
                {{ form_label(form.name, 'Nom du terrain', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>

            {# Bouton de soumission #}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Créer</button>
            </div>

            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}


