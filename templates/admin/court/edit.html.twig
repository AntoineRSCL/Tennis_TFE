{% extends "admin/base.html.twig" %}

{% block title %}Modifier un terrain{% endblock %}

{% form_theme form _self %}

{% block body %}
<div class="adminBox">
    <div class="container-fluid">
        <h1 class="my-2">Modifier un terrain</h1>
        <form method="post">
            {{ form_start(form) }}

            {# Champ nom #}
            <div class="form-group">
                {{ form_label(form.name, 'Nom du terrain', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>

            {# Bouton de soumission #}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
            </div>
            {{ form_end(form) }}
            <a href=" {{ path('admin_court_index') }}" class="btn btn-secondary">Retour</a>
        </form>
    </div>
</div>
{% endblock %}
