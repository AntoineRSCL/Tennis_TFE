{% extends 'admin/base.html.twig' %}

{% block title %}Modifier le Sponsor {% if sponsor.name %}{{ sponsor.name }}{% endif %}{% endblock %}

{% block body %}
<div class="adminBox">
    <div class="container-fluid">
        <a href=" {{ path('admin_sponsor_index') }}" class="btn btn-secondary">Retour</a>
        <h1 class="my-4">Modifier le Sponsor {{ sponsor.name }}</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="form-group">
            {{ form_label(form.logo, 'Logo', {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.logo, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.logo) }}
        </div>

        {# Champ lien #}
            <div class="form-group">
                {{ form_label(form.link, 'Lien vers le site internet', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.link, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.link) }}
            </div>

        <button type="submit" class="btn btn-warning">Modifier</button>
        {{ form_end(form) }}

        <a href="{{ path('admin_sponsor_index') }}" class="btn btn-secondary mt-3">Retour Ã  la liste</a>
    </div>
</div>
{% endblock %}
