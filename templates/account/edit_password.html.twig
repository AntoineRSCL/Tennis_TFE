{% extends 'base.html.twig' %}

{% block title %}Modifier Mot de Passe{% endblock %}

{% block body %}
    <div class="myClub">
        <div class="myClubContainer">
            <h1>Modifier votre mot de passe</h1>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.old_password) }}
                    {{ form_widget(form.old_password, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.new_password) }}
                    {{ form_widget(form.new_password, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.confirm_password) }}
                    {{ form_widget(form.confirm_password, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
