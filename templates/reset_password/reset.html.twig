{# templates/reset_password/reset.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe | Le Smash Ucclois{% endblock %}

{% block body %}
<div class="containerComponent">
    <div class="loginContainer">
        <div class="formLogin">
            <div class="formLoginContainer">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                            <div class="alert alert-{{ label }}">
                            <span>{{ message }}</span>
                        </div>
                    {% endfor %}
                {% endfor %}
                <h1>RÉINITIALISER LE MOT DE PASSE</h1>
                <h4>Choisissez un nouveau mot de passe pour accéder à votre compte.</h4>

                {{form_start(form)}}
                    <div class="groupLogin">
                        {{ form_label(form.new_password, null, {'label_attr': {'class': 'labelLogin'}}) }}
                        {{ form_widget(form.new_password) }}
                        {{ form_errors(form.new_password) }}
                    </div>
                    <div class="groupLogin">
                        {{ form_label(form.confirm_password, null, {'label_attr': {'class': 'labelLogin'}}) }}
                        {{ form_widget(form.confirm_password) }}
                        {{ form_errors(form.confirm_password) }}
                    </div>
                    <button class="submitLogin">Confirmer le nouveau mot de passe</button>
                {{form_end(form)}}

                <div class="mdpOublie">
                    <a href="{{ path('account_login') }}">Retour à la connexion</a>
                </div>
            </div>
        </div>
        <div class="imgLogin">
            <div class="imgLoginContainer">
                <div class="textImgLogin">
                    <span>Un nouveau départ, un nouveau mot de passe.</span>
                    <span>Reprenez là où vous vous êtes arrêté.</span>
                </div>
            </div>
            <div class="containerImgLogin">
                <img src="/images/tennisCourt.jpg" alt="Image d'un court de tennis">
            </div>
        </div>
    </div>
</div>
{% endblock %}
