{# templates/reset_password/reset.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe | Le Smash Ucclois{% endblock %}

{% block body %}
<div class="containerComponent">
    <div class="loginContainer">
        <div class="formLogin">
            <div class="formLoginContainer">
                <h1>RÉINITIALISER LE MOT DE PASSE</h1>
                <h4>Choisissez un nouveau mot de passe pour accéder à votre compte.</h4>

                <form method="post">
                    <div class="groupLogin">
                        <label for="new_password" class="labelLogin">Nouveau mot de passe</label>
                        <input type="password" class="inputLogin" id="new_password" name="new_password" placeholder="Votre nouveau mot de passe" required>
                    </div>
                    <button type="submit" class="submitLogin">Réinitialiser le mot de passe</button>
                </form>

                <div class="backToLogin">
                    <a href="{{ path('account_login') }}">Retour à la connexion</a>
                </div>
            </div>
        </div>
        <div class="imgLogin">
            <div class="imgLoginContainer">
                <div class="textImgLogin">
                    <span>Un nouveau départ, un nouveau mot de passe.</span>
                    <span>Reprenez là où vous vous êtes arrêté.</span>
                </div>
            </div>
            <div class="containerImgLogin">
                <img src="/images/tennisCourt.jpg" alt="Image d'un court de tennis">
            </div>
        </div>
    </div>
</div>
{% endblock %}
