{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réservation{% endblock %}

{% block body %}
<div class="containerComponent">
    <div class="container">
        <h1>Nouvelle Réservation</h1>

        {{ form_start(form) }}
            {{ form_row(form.player2) }} {# Champ pour choisir un adversaire #}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Créer</button>
            </div>
        {{ form_end(form) }}

        <p>Heure de début: {{ reservation.startTime|date('H:i') }}</p>
        <p>Heure de fin: {{ reservation.endTime|date('H:i') }}</p>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            $('.select2').select2({
                // Options supplémentaires pour Select2 peuvent être ajoutées ici
                width: '100%', // Pour que le champ prenne toute la largeur
                minimumInputLength: 1 // Nombre de caractères avant de commencer la recherche
            });
        });
    </script>
{% endblock %}
