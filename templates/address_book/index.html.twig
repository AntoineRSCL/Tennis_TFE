{% extends 'base.html.twig' %}

{% block title %}Carnet d'Adresses{% endblock %}

{% block body %}
<div class="addressBook">
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Carnet d'Adresses</h1>

        <form method="get" action="{{ path('addressbook_index') }}" class="search-form">
            <input type="text" name="searchTerm" value="{{ searchTerm }}" class="form-input" placeholder="Rechercher par nom">
            <button class="btn btn-outline-secondary" type="submit">Rechercher</button>
        </form>

        {% if users is empty %}
            <div class="alert alert-warning text-center" role="alert">
                Aucun utilisateur trouvé.
            </div>
        {% else %}
            <div class="user-cards">
                {% for user in users %}
                    <div class="user-card">
                        <h2>{{ user.lastname }}, {{ user.firstname }}</h2>
                        <p>Email : {{ user.email }}</p>
                        <p>Téléphone : {{ user.phone }}</p>
                        <p>Classement : {{ user.ranking }} ({{ user.doubleRanking }})</p>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="pagination">
            {{ pagination.display() }}
        </div>
    </div>
</div>
{% endblock %}
